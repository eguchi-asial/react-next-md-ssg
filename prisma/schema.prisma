// copy from PlanetScale admin. `Connecting to your database` modal.
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// auto generate from `npx prisma db pull`
model categories {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(255)
}

model markdowns {
  id          Int    @id @default(autoincrement())
  markdown    String @db.LongText
  category_id Int

  @@index([category_id], map: "category_id_idx")
}
